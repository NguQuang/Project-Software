@page "{id:Guid}"
@model Nevada.Pages.Admin.Shoes.EditModel
@{
}
<div class="bg-secondary bg-opacity-10 mb-5">
    <div class="container">
        <h1>Edit Shoes</h1>
    </div>
</div>

<div class="container mb-5">
    <form method="post">
        <div class="mb-3">
            <label for="id" class="form-label">Id</label>
            <input type="text" class="form-control" id="id" asp-for="Shoe.Id" readonly />
        </div>
        <div class="mb-3">
            <label for="shoeName" class="form-label">Shoe Name</label>
            <input type="text" class="form-control" id="shoeName" asp-for="Shoe.ShoeName" />
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="text" class="form-control" id="price" asp-for="Shoe.Price" />
        </div>
        <div class="mb-3">
            <label for="size" class="form-label">Size</label>
            <input type="number" class="form-control" id="size" asp-for="Shoe.Size" />
        </div>
        <div class="mb-3">
            <label for="property" class="form-label">Property</label>
            <textarea class="form-control" id="property" asp-for="Shoe.Property"></textarea>
        </div>
        <div class="mb-3">
            <label for="imageTitle" class="form-label">Image Title</label>
            <input type="text" class="form-control" id="imageTitle" asp-for="Shoe.ImageTitle" />
        </div>
        <div class="mb-3">
            <label for="imageTitle1" class="form-label">Image Title1</label>
            <input type="text" class="form-control" id="imageTitle1" asp-for="Shoe.ImageTitle1" />
        </div>
        <div class="mb-3">
            <label for="imageTitle2" class="form-label">Image Title2</label>
            <input type="text" class="form-control" id="imageTitle2" asp-for="Shoe.ImageTitle2" />
        </div>
        <div class="mb-3">
            <label for="imageTitle3" class="form-label">Image Title3</label>
            <input type="text" class="form-control" id="imageTitle3" asp-for="Shoe.ImageTitle3" />
        </div>
        <div class="mb-3 form-check">
            <input class="form-check-input" type="checkbox" id="outOfStock" asp-for="Shoe.OutOfStock">
            <label class="form-check-label" for="outOfStock">
                Out of stock
            </label>
        </div>
        <div class="mb-3 d-flex justify-content-between">
            <button class="btn btn-primary" type="submit" asp-page-handler="Edit">Submit</button>
            <button class="btn btn-danger" type="submit" asp-page-handler="Delete">Delete</button>
        </div>
    </form>
</div>