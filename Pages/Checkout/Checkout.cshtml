@page
@model Nevada.Pages.Checkout.CheckoutModel
@{
}
<h1> Your order!</h1>
@{
    var imagePath = "~/images/" + (@Model.ImageTitle + ".jpg");
}
<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src=@imagePath class="w-100" asp-append-version="true" />
        <p>Your order for the @Model.ShoeName is ready!</p>
        <p>Total price for your order is:@Model.Price $</p>
        <br />
       <a class="btn alert-primary mt-1 mx-auto" asp-area="" asp-page="/Forms/ConfirmOrder">Confirm order</a>

    </div>
</div>