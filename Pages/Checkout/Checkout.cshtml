@page
@model Nevada.Pages.Checkout.CheckoutModel
@{
}
<h1> Your order!</h1>
@{
    var imagePath = Model.ViewShoes.ImageTitle;
}
<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src=@imagePath class="w-100" asp-append-version="true" />
        <br />
        <p>Your order for the @Model.ViewShoes.ShoeName is ready!</p>
        <p>Total price for your order is:@Model.ViewShoes.Price $</p>
        <br />
        <p>Thank you for choosing us!</p>
        <br />
        <p class="smallText"><i>We will contact you soon!</i></p>
        

    </div>
</div>